<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.easternpearl.tasktracker.control.SubTaskController">
   <children>
      <Pane prefHeight="40.0" prefWidth="870.0" styleClass="sub_todo_card" stylesheets="@css/style.css">
         <children>
            <Label fx:id="subTaskTitle" layoutX="9.0" layoutY="12.0" prefHeight="21.0" prefWidth="601.0" text="this is a Sub Todo">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button layoutX="612.0" layoutY="4.0" mnemonicParsing="false" onAction="#editSubTask" prefHeight="25.0" prefWidth="51.0" styleClass="button-38" stylesheets="@css/style.css" text="Edit" />
            <Button layoutX="668.0" layoutY="4.0" mnemonicParsing="false" onAction="#deleteSubTask" prefHeight="29.0" prefWidth="69.0" styleClass="button-38" stylesheets="@css/style.css" text="Delete" />
            <Button layoutX="742.0" layoutY="4.0" mnemonicParsing="false" onAction="#subTaskFinishToggle" prefHeight="29.0" prefWidth="119.0" styleClass="button-38" stylesheets="@css/style.css" text="Mark as Finished" />
         </children>
      </Pane>
   </children>
</HBox>
